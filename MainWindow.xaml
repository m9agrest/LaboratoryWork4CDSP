        <Button Width="60" Margin="150,10,0,0" Height="25" Content="Круг 2" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Label Height="25" Margin="0,0,0,45" VerticalAlignment="Bottom" x:Name="Info1"/>
        <Label Height="25" Margin="0,0,0,10" VerticalAlignment="Bottom" x:Name="Info2"/>
        <Canvas x:Name="canvas"></Canvas>
    </Grid>
